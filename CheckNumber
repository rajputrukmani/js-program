    <!-- 8. Javascript Program to Check if a number is Positive, Negative, or Zero-->
     <script>
        var a = prompt("enter a no")

        if(a>0)
        {
            console.log("no. is positive")
        }

        else if(a<0)
        {
            console.log("no. is negative")
        }
        else{
            console.log("no. is zero")
        }
     </script>
    
